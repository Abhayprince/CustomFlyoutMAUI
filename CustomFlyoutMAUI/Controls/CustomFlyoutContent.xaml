                           HeightRequest="25"
                           WidthRequest="25"/>

                <Label Grid.Column="1" 
                           Text="Menu item 1"
                           FontSize="16"
                           />

                <Label Grid.Column="2"
                           Text=">"
                           FontAttributes="Bold"
                           Scale="1.5"
                           />

